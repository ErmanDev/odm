<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/glass_white_25"
    app:strokeWidth="1dp"
    app:strokeColor="@color/glass_white_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row: Date and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATUS"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/item_row_background" />
        </LinearLayout>

        <!-- Officer Name -->
        <TextView
            android:id="@+id/textViewOfficerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Officer Name"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Clock In/Out Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textViewClockIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="In: --"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textViewClockOut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Out: --"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:gravity="end" />
        </LinearLayout>

        <!-- Badges Row -->
        <LinearLayout
            android:id="@+id/layoutBadges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="8dp"
            android:visibility="gone">
            
            <TextView
                android:id="@+id/badgeClockIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLOCK IN"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/status_ongoing_bg"
                android:layout_marginEnd="4dp"
                android:visibility="gone" />
            
            <TextView
                android:id="@+id/badgeClockOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLOCK OUT"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/status_ongoing_bg"
                android:layout_marginEnd="4dp"
                android:visibility="gone" />
            
            <TextView
                android:id="@+id/badgeLate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LATE"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/status_pending_bg"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

