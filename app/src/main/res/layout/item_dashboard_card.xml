<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:minHeight="140dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/dashboard_card_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:minHeight="140dp">

        <ImageView
            android:id="@+id/imageViewCardIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_officer_list"
            android:contentDescription="@string/officer_list_management"
            android:tint="@color/text_primary" />

        <TextView
            android:id="@+id/textViewCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Card Title"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

