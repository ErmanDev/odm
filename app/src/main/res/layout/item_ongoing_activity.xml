<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_row_background"
    android:padding="12dp"
    android:minHeight="48dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/textViewActivityDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Date"
        android:textColor="@color/text_primary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewActivityTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="Task"
        android:textColor="@color/text_primary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewActivityLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Location"
        android:textColor="@color/text_primary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewActivityStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Status"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:background="@drawable/status_pending_bg"
        android:padding="4dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="none"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textViewActivityAction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Action"
        android:textColor="@color/dashboard_header_bg"
        android:textSize="12sp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>

